@model IEnumerable<EBillingSoft.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
}

<h2>Invoices</h2>
<table class="table">
    <thead>
        <tr>
            <th>Invoice Date</th>
            <th>Customer Name</th>
            <th>Total Amount</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.invoice_date</td>
                <td>@invoice.customer_name</td>
                <td>@invoice.total_amount</td>
                <td>
                    @Html.ActionLink("View Details", "Details", new { id = invoice.invoice_id })
                </td>
            </tr>
        }
    </tbody>
</table>
