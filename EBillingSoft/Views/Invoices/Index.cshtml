@using System.Globalization

@{
    ViewBag.Title = "Invoices";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ4QTwM8UQ2RpC3I3f06N0cRj4FO3g8T7O2mhwkhbsbHIkFknvYg5vnfozF89" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #4CAF50;
            font-size: 36px;
            margin-top: 30px;
        }

        .container {
            padding: 30px;
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
        }

        td {
            background-color: #f9f9f9;
            color: #333;
            font-size: 14px;
        }

            td:hover {
                background-color: #f1f1f1;
            }

        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
            font-weight: bold;
            padding: 10px 20px;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            .btn-primary:hover {
                background-color: #45a049;
                border-color: #45a049;
            }

        .footer {
            text-align: center;
            margin-top: 50px;
            font-size: 14px;
            color: #666;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Invoices</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Invoice Date</th>
                    <th>Customer Name</th>
                    <th>Total Amount</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model)
                {
                    <tr>
                        <td>@invoice.invoice_date.ToString("yyyy-MM-dd")</td> <!-- Format the date -->
                        <td>@invoice.customer_name</td>
                        <td>@String.Format(new System.Globalization.CultureInfo("en-IN"), "{0:C}", invoice.total_amount)</td> <!-- Format the amount in INR -->
                        <td>
                            @Html.ActionLink("View Details", "Details", new { id = invoice.invoice_id }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="footer">
            <p>&copy; 2024 E-Billing Software | All rights reserved</p>
        </div>
    </div>

    <!-- Bootstrap JS (Optional for better interactivity, if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0lGyT6P66XZ39f9eNB2VsqEZZFJi5hPIyOwSuih3SckW7k5m" crossorigin="anonymous"></script>
</body>
</html>
